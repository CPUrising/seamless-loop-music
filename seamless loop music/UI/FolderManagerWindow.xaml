<Window x:Class="seamless_loop_music.UI.FolderManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Manager" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E" Foreground="White" FontFamily="Microsoft YaHei">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblTitle" Text="Linked Folders for Playlist" FontSize="16" FontWeight="Bold" Foreground="#89B4FA" Margin="0,0,0,15"/>

        <ListBox x:Name="lstFolders" Grid.Row="1" Background="#181825" BorderThickness="0" Margin="0,0,0,15" Foreground="White">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding}"/>
                        <Button Grid.Column="1" Content="âŒ" Width="30" Margin="10,0,0,0" 
                                Background="Transparent" Foreground="#F38BA8" BorderThickness="0"
                                Click="btnRemove_Click" Tag="{Binding}" ToolTip="Remove folder connection"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnAdd" Content="+ Add Folder" Width="120" Height="35" 
                    Background="#A6E3A1" Foreground="#11111B" FontWeight="Bold"
                    Click="btnAdd_Click" Margin="0,0,10,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="btnClose" Content="Close" Width="80" Height="35" 
                    Background="#313244" Foreground="#CDD6F4"
                    Click="btnClose_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
