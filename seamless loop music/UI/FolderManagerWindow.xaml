<Window x:Class="seamless_loop_music.UI.FolderManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Manager" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <!-- Standard WPF Button Style -->
        <Style x:Key="WPFButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <!-- Bold Accent Button -->
        <Style x:Key="WPFAccentButtonStyle" TargetType="Button" BasedOn="{StaticResource WPFButtonStyle}">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblTitle" Text="Linked Folders for Playlist" FontSize="14" FontWeight="Bold" Foreground="Black" Margin="0,0,0,10"/>

        <!-- Standard ListBox with White Background -->
        <ListBox x:Name="lstFolders" Grid.Row="1" Background="White" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,15" Foreground="Black">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="5"/>
                        <Button Grid.Column="1" Content="Remove" Width="60" Height="22" Margin="10,0,0,0" 
                                Click="btnRemove_Click" Tag="{Binding}" FontSize="11"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnAdd" Content="+ Add Folder" Width="120" 
                    Style="{StaticResource WPFAccentButtonStyle}"
                    Click="btnAdd_Click" Margin="0,0,10,0" />
            
            <Button x:Name="btnClose" Content="Close" Width="75" 
                    Style="{StaticResource WPFButtonStyle}"
                    Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
