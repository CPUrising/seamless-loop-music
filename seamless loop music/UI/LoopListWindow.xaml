<Window x:Class="seamless_loop_music.UI.LoopListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loop Candidates" Height="450" Width="600" WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">
    <Window.Resources>
        <Style TargetType="ListViewItem">
             <Setter Property="Background" Value="Transparent"/>
             <Setter Property="Foreground" Value="White"/>
             <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
             <Style.Triggers>
                 <Trigger Property="IsSelected" Value="True">
                     <Setter Property="Background" Value="#3366CC"/>
                 </Trigger>
                 <Trigger Property="IsMouseOver" Value="True">
                     <Setter Property="Background" Value="#3E3E42"/>
                 </Trigger>
             </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Select a loop to apply and test immediately:" Margin="0,0,0,10" Foreground="#AAAAAA" FontSize="14"/>
        
        <ListView Grid.Row="1" Name="lstCandidates" Background="#252526" Foreground="White" BorderThickness="0" 
                  SelectionMode="Single" MouseDoubleClick="LstCandidates_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Score" DisplayMemberBinding="{Binding ScoreDisplay}" Width="80"/>
                    <GridViewColumn Header="Start (Sample)" DisplayMemberBinding="{Binding Start}" Width="100"/>
                    <GridViewColumn Header="End (Sample)" DisplayMemberBinding="{Binding End}" Width="100"/>
                    <GridViewColumn Header="Length (s)" DisplayMemberBinding="{Binding Duration}" Width="80"/>
                    <GridViewColumn Header="Note Distance" DisplayMemberBinding="{Binding NoteDistance}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnUpdate" Content="Update" Click="BtnUpdate_Click" Padding="15,5" Margin="0,0,10,0" Background="#89DCEB" Foreground="#11111B" BorderThickness="0"/>
            <Button Content="Close" Click="BtnClose_Click" Padding="15,5" Background="#3E3E42" Foreground="Black" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
